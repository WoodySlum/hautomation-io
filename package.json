{
    "name": "hautomation-core",
    "version": "0.0.4",
    "description": "Hautomation core module",
    "main": "HautomationRunner.js",
    "engines": {
        "node": "8.9.1"
    },
    "engineStrict": true,
    "scripts": {
        "dev": "nodemon --config .nodemon.json  HautomationRunner.js",
        "start": "node HautomationRunner.js",
        "pre-test": "rm -Rf /tmp/data && mkdir /tmp/data && cp -f ./data/config.json /tmp/data",
        "test": "npm run pre-test && env TEST=1 NO_LOG=1 mocha --timeout 600000 --reporter progress $(find tests -name '*.tests.js')",
        "test-ci": "npm run pre-test && env TEST=1 NO_LOG=1 istanbul cover _mocha -- --timeout 600000 --reporter mocha-junit-reporter $(find tests -name '*.tests.js')",
        "coverage": "npm run pre-test && env TEST=1 NO_LOG=1 istanbul cover _mocha -- --timeout 600000 $(find tests -name '*.tests.js')",
        "lint": "eslint ./src/ --ext .js",
        "doc": "documentation build ./src/** -f md -o ./doc/DOCUMENTATION.md && documentation build ./src/modules/pluginsmanager/publicapis/** -f md -o ./doc/PUBLIC-APIS.md",
        "pre-build": "npm run doc && rm -Rf ./build/* && mkdir -p ./build/plugins && mkdir -p ./build/doc && cp -R ./data ./build/ && cp ./doc/PLUGIN.md ./build/doc/ && cp ./doc/PUBLIC-APIS.md ./build/doc/ && cp -R ./scripts ./build/ && cp -R ./res ./build/",
        "build": "npm run pre-build && pkg -o ./build/hautomation . && find ./node_modules -name '*.node' -exec cp -Rf {} ./build/ \\;",
        "build-arm": "npm run pre-build && pkg -t node8-linux-armv7 -o ./build/hautomation . && find ./node_modules -name '*.node' -exec cp -Rf {} ./build/ \\; && find ./node_modules -name '*.node' | grep arm | xargs cp -Rf -t ./build/"
    },
    "bin": "HautomationRunner.js",
    "pkg": {
        "scripts": [
            "./src/**/*.js"
        ],
        "assets": [
            "./src/internal-plugins/**/*.js",
            "./node_modules/threads/lib/worker.node/slave.js",
            "./**/*.json",
            "./ui/**/*",
            "./src/**/*.c",
            "./src/**/*.cpp",
            "./src/**/*.h",
            "./src/**/lib/",
            "./src/**/global_lib/",
            "./**/*.py",
            "./src/modules/botengine/linux/asoundrc"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git@honey.hd.free.fr:hautomation/core-node.git"
    },
    "keywords": [
        "hautomation",
        "core"
    ],
    "author": "WoodySlum",
    "license": "ISC",
    "devDependencies": {
        "chai": "^3.5",
        "documentation": "^5",
        "eslint": "^3.19",
        "eslint-plugin-jsdoc": "^3.3.0",
        "eslint-plugin-mocha": "^4.11.0",
        "eslint-plugin-require-jsdoc": "^1.0",
        "istanbul": "^1.0.0-alpha.2",
        "mocha": "^3.5.0",
        "mocha-junit-reporter": "^1.13",
        "node-pre-gyp": "^0.6",
        "nodemon": "^1.14",
        "pkg": "^4.0",
        "sinon": "^2.4.1"
    },
    "dependencies": {
        "annotation": "git+https://github.com/WoodySlum/node-annotation.git#master",
        "audiohub": "git://github.com/WoodySlum/audiohub.git#master",
        "body-parser": "^1.17",
        "callsite": "^1.0.0",
        "columnify": "^1.5",
        "compression": "^1.7",
        "express": "^4.15",
        "express-minify": "^1.0",
        "fs-extra": "^4.0",
        "gm": "^1.23",
        "is-running": "^2.1.0",
        "md5-file": "^3.2",
        "mjpeg-proxy": "^0.2",
        "moment": "^2.20.1",
        "moment-timezone": "^0.5",
        "node-datetime": "^1.0.1",
        "node-gtts": "^2.0",
        "node-record-lpcm16": "^0.3",
        "node-wit": "^4.3",
        "node-witai-speech": "^1.0",
        "prowler": "^0.0",
        "remi": "^2.0",
        "remi-runner": "^1.1",
        "serialport": "^5.0",
        "sha256": "^0.2",
        "snowboy": "^1.2",
        "sqlite3": "^3.1.8",
        "stack-trace": "^0.0",
        "string-similarity": "^1.2",
        "threads": "git://github.com/WoodySlum/threads.js.git#master",
        "toposort": "^1.0",
        "uglify-es": "^3.3.2",
        "underscore": "^1.8",
        "usb-detection": "^1.4",
        "waveheader": "^0.0",
        "xml2js": "^0.4",
        "ngrok": "^2.2"
    }
}
