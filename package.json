{
  "name": "hautomation-core",
  "version": "0.0.3",
  "description": "Hautomation core module",
  "main": "HautomationRunner.js",
  "publishConfig": {
    "registry": "http://honey.hd.free.fr:4873"
  },
  "engines": {
    "node": ">=6.0"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "nodemon --debug=8082 --config .nodemon.json  HautomationRunner.js",
    "start": "node HautomationRunner.js",
    "test": "mocha --compilers js:mocha-traceur --recursive ./tests/**/*.tests.js",
    "test-ci": "istanbul cover _mocha -- --reporter mocha-junit-reporter --compilers js:mocha-traceur --recursive ./tests/**/*.tests.js",
    "coverage": "istanbul cover _mocha -- --compilers js:mocha-traceur --recursive ./tests/**/*.tests.js",
    "lint": "eslint ./src/ --ext .js",
    "doc": "documentation build ./src/** -f md -o ./doc/DOCUMENTATION.md",
    "doc-apis": "documentation build ./src/modules/pluginsmanager/publicapis/** -f md -o ./doc/PUBLIC-APIS.md",
    "pre-build":"rm -Rf ./build/* && mkdir -p ./build/plugins && cp -R ./data ./build/",
    "build": "npm run pre-build && pkg -o ./build/hautomation ."
  },
  "bin": "HautomationRunner.js",
  "pkg": {
    "scripts": ["./src/**/*.js"],
    "assets": ["./src/internal-plugins/**/*.js"]
  },
  "repository": {
    "type": "git",
    "url": "git@honey.hd.free.fr:hautomation/core-node.git"
  },
  "keywords": [
    "hautomation",
    "core"
  ],
  "author": "WoodySlum",
  "license": "ISC",
  "devDependencies": {
    "chai": "^3.5",
    "sinon": "^2.2",
    "mocha": "^3.3",
    "mocha-traceur": "2.1",
    "mocha-junit-reporter": "^1.13",
    "istanbul": "^1.1.0-alpha.1",
    "eslint": "^3.19",
    "eslint-plugin-mocha": "^4.9",
    "eslint-plugin-jsdoc": "^3.0",
    "eslint-plugin-require-jsdoc": "^1.0",
    "nodemon": "^1.11.0",
    "documentation": "^4.0.0-rc.1",
    "pkg":"^3.0"
  },
  "dependencies": {
    "traceur": "^0.0",
    "express": "^4.15",
    "body-parser": "^1.17",
    "remi":"^2.0"
 }
}
